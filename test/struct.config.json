{
    "driver": "mysql",
    "tables": {
        "users": {
            "fields": {
                "id": {
                    "type": "uuid",
                    "primary": true
                },
                "nickname": {
                    "type": "varchar"
                },
                "password": {
                    "type": "varchar"
                },
                "email": {
                    "type": "varchar"
                },
                "points": {
                    "type": "integer"
                }
            }
        },
        "sessions": {
            "fields": {
                "id": {
                    "type": "uuid",
                    "primary": true
                },
                "user_id": {
                    "type": "uuid"
                },
                "last_activity": {
                    "type": "datetime"
                }
            }
        }
    }
}